@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader Style="background-color: #ffffff">
        <div class="container-fluid">
            <div class="row justify-content-start align-items-center" style="background-color: rgba(122, 159, 106, 0.55)">
                <div class="col-6 d-flex align-items-center ps-0 pl-0">
                    <RadzenSidebarToggle Click="@SidebarToggleClick" Style="background-color: rgba(132, 130, 130, 0.36)"></RadzenSidebarToggle>
                </div>
            </div>
        </div>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded" Style="color: #4c6990; background-color: rgba(122, 159, 106, 0.55)">
        <div class="container-fluid pt-2 pt-md-3 pt-lg-4 pt-xl-5 pb-2 pb-lg-5" style="max-width: 1440px;">
            <div class="row">
                <div class="col">
                @Body
                </div>
            </div>
        </div>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2; background-color: rgb(128, 186, 39); color: rgb(134, 184, 27)">
        <div class="py-3 py-lg-4" style="color: var(--rz-primary-light); padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border); display: flex; flex-direction: column; gap: 1rem; align-items: center">
            <RadzenImage Path="\images\logo-blanco.footer.png" Style="width: 192px; height: 114px"></RadzenImage>
            <RadzenText Text="CALENDARIO FORESTAL DESDE LOS CONOCIMIENTOS ANCESTRALES Y PRÁCTICAS TRADICIONALES DE LOS PUEBLOS INDÍGENAS" TextStyle="Radzen.Blazor.TextStyle.Subtitle2" TextAlign="Radzen.TextAlign.Center" class="mb-0" style="text-align: justify-all; font-size: 14px; color: var(--rz-white); font-family: Helvetica Neue" />
        </div>
        <RadzenPanelMenu Style="background-color: rgb(128, 186, 39); border-top-left-radius: 1px; border-bottom-right-radius: 1px; font-family: Helvetica Neue">
            <RadzenPanelMenuItem Text="INICIO" Path="/" />
            <RadzenPanelMenuItem Text="CALENDARIO " Path="registros" />
            <RadzenPanelMenuItem Text="BIBLIOTECA " Path="biblioteca" />
        </RadzenPanelMenu>
        <div class="py-3 py-md-4" style="padding: var(--rz-panel-menu-item-padding); height: 181px">
            <RadzenText Text="CALENDARIO FORESTAL v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-black); font-family: Helvetica Neue" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="mb-0" style="color: var(--rz-black); font-family: Helvetica Neue" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenIcon Icon="today"></RadzenIcon>
        </div>
    </RadzenSidebar>
</RadzenLayout>
